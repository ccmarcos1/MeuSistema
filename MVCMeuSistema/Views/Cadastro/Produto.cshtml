
@{
    ViewBag.Title = "Produto";
    string[] produtos = { "Monitor", "Mouse" };
    int[] quant = { 1, 15 };
    var resultado = "";
}

<h2>Produto</h2>

<h1>Lista de Produtos</h1>
<ul>
    @for (int i = 0; i < produtos.Length; i++)
    {
        if (quant[i] < 5)
        {
            resultado = "QuantidadeEmAlerta";
        }
        else {
            resultado = "QuantidadeNormal";
        }
            <li class="@resultado">
            @("Produto: " + produtos[i] + ", Em Estoque: "+ quant[i])
        </li>
    }
</ul>

<table class="table">
    <caption>Lista de usuários</caption>
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Primeiro</th>
            <th scope="col">Último</th>
            <th scope="col">Nickname</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td></td>
        </tr>
        <tr>
            <th scope="row">2</th>
            <td>Jacob</td>
            <td>Thornton</td>
            <td></td>
        </tr>
        <tr>
            <th scope="row">3</th>
            <td>Larry</td>
            <td>the Bird</td>
            <td></td>
        </tr>
    </tbody>
</table>

